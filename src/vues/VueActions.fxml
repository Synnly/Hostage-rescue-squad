<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vues.VueActions">
   <children>
      <VBox alignment="BOTTOM_RIGHT" spacing="5.0">
         <children>
            <Button fx:id="boutonFinTour" mnemonicParsing="false" onAction="#handle">
               <graphic>
                  <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/fast-forward.png" />
                     </image>
                  </ImageView>
               </graphic>
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
            </Button>
            <Label fx:id="probaTir1" text="Chance de succes" textAlignment="RIGHT" />
            <Label fx:id="coutTir1" alignment="CENTER_RIGHT" text="Cout" textAlignment="RIGHT" />
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" spacing="5.0">
         <children>
            <Button fx:id="boutonTir" mnemonicParsing="false" onAction="#handle">
               <graphic>
                  <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/aim.png" />
                     </image>
                  </ImageView>
               </graphic>
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding></Button>
            <Label fx:id="probaTir" text="Label" />
            <Label fx:id="coutTir" text="Label" />
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" spacing="5.0">
         <children>
            <Button fx:id="boutonDepl" mnemonicParsing="false" onAction="#handle">
               <graphic>
                  <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/expand-arrows.png" />
                     </image>
                  </ImageView>
               </graphic>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding></Button>
            <Label fx:id="probaDepl" text="Label" />
            <Label fx:id="coutDepl" layoutX="10.0" layoutY="34.0" text="Label" />
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" spacing="5.0">
         <children>
            <Button fx:id="boutonElimSil" mnemonicParsing="false" onAction="#handle">
               <graphic>
                  <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/knife.png" />
                     </image>
                  </ImageView>
               </graphic>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding></Button>
            <Label fx:id="probaElimSil" text="Label" />
            <Label fx:id="coutElimSil" layoutX="10.0" layoutY="34.0" text="Label" />
         </children>
      </VBox>
   </children>
</HBox>
